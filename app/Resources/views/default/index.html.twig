{% extends 'layout.html.twig' %}

{% block content %}
    <ul class="list-group">
        {% for article in articles %}
        <li class="list-group-item">
            <a href="{{ path('one_article', {'slug' : article.slug} ) }}">{{ article.title }}</a> - {{ article.updatedDate | date('Y-m-d') }}</li>
        {% endfor %}
    </ul>
{% endblock %}


