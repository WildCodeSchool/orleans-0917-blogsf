{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <h1>{{ article.title }} -
        <small>{{ article.updatedDate | date('Y-m-d') }}</small>
    </h1>
    <p>{{ article.content }}</p>

    <h2>Commentaires</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Submit</button>

    {{ form_end(form) }}

    {% for comment in article.comments %}
        <blockquote>
            <p>{{ comment.message }}</p>
            <footer><cite>{{ comment.nickname }} - {{ comment.date | date('Y-m-d H:i:s') }}</cite></footer>
        </blockquote>
    {% else %}
        <p>No comment</p>
    {% endfor %}
{% endblock %}
